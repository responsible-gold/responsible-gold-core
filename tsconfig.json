{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./test",
    "./scripts",
    "./contracts",
    "./typechain-types/**/*",
    "**/*.ts",
    "./decs.d.ts"
  ],
  "exclude": ["dist", "node_modules/"],
  "files": ["package.json"]
}
